
<%= stylesheet_link_tag "LoginScreen.css" %>

<div class="login-form">
  <h1 class="login-header">Log in</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email , class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field", required: true%>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password",class: "input-field", required: true%>
  </div>

  <div class="actions">
    <%= f.submit "Log in" ,class: "login-btn" %>
    <%= flash[:alert]%>
  </div>
  <%= render "devise/shared/links" %>
</div>
<% end %>
